{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "request.schema.json",
  "type": "object",
  "title": "Request",
  "required": [
    "model",
    "session-secret"
  ],
  "properties": {
    "model": {
      "propertyNames": {
        "enum": [
          "NWM"
          "NGEN",
          "XYZ"
        ]
      },
      "properties": {
        "XYZ": {
          "$ref": "file:xyz.schema.json"
        },
        "NGEN": {
          "$ref": "file:ngen.schema.json"
        },
        "NWM": {
          "$ref": "file:nwm.schema.json"
        }
      },
      "oneOf": [
        {
          "required": [
            "NWM"
          ]
        },
        {
          "required": [
            "NGEN"
          ]
        },
        {
          "required": [
            "XYZ"
          ]
        }
      ]
    },
    "domain": {
      "enum": [
        "test-domain"
      ],
      "type": "string"
    },
    "client_id": {
      "type": "number"
    },
    "session-secret": {
      "type": "string",
      "minLength": 64,
      "maxLength": 64
    }
  },
  "$comment": "If we add properties along the way, may not want this",
  "additionalProperties": false
}
