{
    "name": "Observations",
    "value_field": "observation",
    "value_selectors": [
        {
            "name": "observation",
            "where": "value",
            "path": ["values[*]", "value[*]", "value"],
            "datatype": "float",
            "origin": ["$", "value", "timeSeries[*]"],
            "associated_fields": [
                {
                    "name":"value_date",
                    "path": ["values[*]", "value[*]", "dateTime"],
                    "datatype": "datetime"
                },
                {
                    "name":"observation_location",
                    "path": ["sourceInfo", "siteCode", "[0]", "value"],
                    "datatype": "string"
                },
                {
                    "name":"unit",
                    "path": ["variable", "unit", "unitCode"],
                    "datatype": "string"
                }
            ]
        }
    ],
    "backend": {
        "backend_type": "file",
        "format": "json",
        "address": "resources/observations.json"
    },
    "locations": {
        "identify": true,
        "from_field": "value"
    },
    "unit": {
        "field": "unit"
    },
    "x_axis": "value_date"
}